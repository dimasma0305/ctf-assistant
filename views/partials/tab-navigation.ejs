<!-- Tab Navigation Component -->
<!-- 
Usage: <%- include('partials/tab-navigation', { 
    tabs: [
        { id: 'tab1', label: 'Tab 1', icon: 'bi-home', active: true },
        { id: 'tab2', label: 'Tab 2', icon: 'bi-gear' }
    ]
}) %>
-->
<% if (typeof tabs !== 'undefined' && tabs.length > 0) { %>
    <ul class="nav nav-tabs card-header-tabs" role="tablist">
        <% tabs.forEach(function(tab) { %>
            <li class="nav-item">
                <a class="nav-link <%= tab.active ? 'active' : '' %>" 
                   data-bs-toggle="tab" 
                   href="#<%= tab.id %>" 
                   role="tab">
                    <% if (tab.icon) { %>
                        <i class="<%= tab.icon %> me-1"></i>
                    <% } %>
                    <%= tab.label %>
                </a>
            </li>
        <% }); %>
    </ul>
<% } %>
