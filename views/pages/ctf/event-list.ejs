<%
const layoutData = {
    title: 'CTF Events',
    user: null, // Public page
    currentPage: 'events',
    pageHeader: 'Public CTF Events',
    headerActions: `
        <button class="btn btn-primary btn-custom" onclick="refreshEvents()">
            <i class="bi bi-arrow-clockwise me-2"></i>Refresh
        </button>
    `,
    cssFiles: ['event-list'],
    jsFiles: ['event-list']
};
%>

<%- include('../../layout', { 
    ...layoutData, 
    body: `
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-event me-2"></i>Available CTF Events
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (events && events.length > 0) { %>
                            <div class="list-group list-group-flush">
                                <% events.forEach(event => { %>
                                    <a href="#" class="list-group-item list-group-item-action event-item" 
                                       data-bs-toggle="modal" data-bs-target="#eventModal" 
                                       data-event='<%= JSON.stringify(event).replace(/'/g, "&apos;") %>'>
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <div class="d-flex align-items-center mb-1">
                                                    <% if (event.logo) { %>
                                                        <img src="<%= event.logo %>" alt="Event Logo" class="event-logo-small me-2">
                                                    <% } else { %>
                                                        <div class="event-logo-placeholder me-2">
                                                            <i class="bi bi-flag"></i>
                                                        </div>
                                                    <% } %>
                                                    <h6 class="mb-0 fw-bold"><%= event.title %></h6>
                                                </div>
                                                <p class="mb-1 text-muted">
                                                    <i class="bi bi-building me-1"></i><%= event.organizer || 'Unknown Organizer' %>
                                                </p>
                                                <% if (event.timelines && event.timelines.length > 0) { %>
                                                    <p class="mb-1 text-muted">
                                                        <i class="bi bi-calendar me-1"></i>
                                                        <%= new Date(event.timelines[0].startTime).toLocaleDateString() %> - 
                                                        <%= new Date(event.timelines[event.timelines.length - 1].endTime).toLocaleDateString() %>
                                                    </p>
                                                <% } %>
                                            </div>
                                            <div class="text-end">
                                                <% if (event.format && event.format.length > 0) { %>
                                                    <% event.format.forEach(format => { %>
                                                        <span class="badge bg-primary me-1 mb-1"><%= format %></span>
                                                    <% }) %>
                                                <% } %>
                                                <% if (event.restrictions && event.restrictions.length > 0) { %>
                                                    <div>
                                                        <% event.restrictions.forEach(restriction => { %>
                                                            <span class="badge bg-warning me-1"><%= restriction %></span>
                                                        <% }) %>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </a>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="bi bi-calendar-x display-1 text-muted"></i>
                                <h4 class="mt-3 text-muted">No events found</h4>
                                <p class="text-muted">There are currently no CTF events available.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Event Details Modal -->
        <div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="eventModalLabel">Event Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="text-center mb-4">
                            <img id="modalEventLogo" alt="Event Logo" class="event-logo-large">
                        </div>
                        
                        <div class="row">
                            <div class="col-md-8">
                                <table class="table table-borderless">
                                    <tr>
                                        <td width="150"><strong>Title:</strong></td>
                                        <td id="modalEventTitle"></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Organizer:</strong></td>
                                        <td id="modalEventOrganizer"></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Date Range:</strong></td>
                                        <td id="modalEventDateRange"></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Format:</strong></td>
                                        <td id="modalEventFormat"></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Restrictions:</strong></td>
                                        <td id="modalEventRestrictions"></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Website:</strong></td>
                                        <td>
                                            <a id="modalEventURL" href="#" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-link-45deg me-1"></i>Visit Event
                                            </a>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <h6><i class="bi bi-info-circle me-2"></i>Description</h6>
                            <div id="modalEventDescription" class="border rounded p-3 bg-light"></div>
                        </div>
                        
                        <div class="mt-4">
                            <h6><i class="bi bi-clock me-2"></i>Event Timeline</h6>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Phase</th>
                                            <th>Start Time</th>
                                            <th>End Time</th>
                                            <th>Timezone</th>
                                            <th>Location</th>
                                        </tr>
                                    </thead>
                                    <tbody id="modalEventTimelines"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    `
}) %>