<% 
const layoutData = {
    title: 'Admin - Manage Events',
    user: 'admin',
    currentPage: 'admin',
    pageHeader: 'Manage Events',
    headerActions: `
        <a href="/admin/event/new" class="btn btn-primary btn-custom">
            <i class="bi bi-plus-circle me-2"></i>Create New Event
        </a>
    `,
    jsFiles: ['admin-events'],
    extraJS: `<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>`
};
%>

<%- include('../../layout', { 
    ...layoutData, 
    body: `
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-event me-2"></i>CTF Events Management
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <i class="bi bi-flag me-2"></i>Title
                                </th>
                                <th>
                                    <i class="bi bi-building me-2"></i>Organizer
                                </th>
                                <th>
                                    <i class="bi bi-calendar-range me-2"></i>Date Range
                                </th>
                                <th>
                                    <i class="bi bi-gear me-2"></i>Format
                                </th>
                                <th>
                                    <i class="bi bi-shield me-2"></i>Restrictions
                                </th>
                                <th>
                                    <i class="bi bi-tools me-2"></i>Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% events.forEach(event => { %>
                            <tr>
                                <td>
                                    <div class="fw-bold"><%= event.title %></div>
                                </td>
                                <td><%= event.organizer %></td>
                                <td>
                                    <% if (event.timelines && event.timelines.length > 0) { %>
                                        <small>
                                            <%= new Date(event.timelines[0].startTime).toLocaleDateString() %><br>
                                            <%= new Date(event.timelines[event.timelines.length - 1].endTime).toLocaleDateString() %>
                                        </small>
                                    <% } else { %>
                                        <span class="text-muted">N/A</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% event.format.forEach(format => { %>
                                        <span class="badge bg-info me-1"><%= format %></span>
                                    <% }) %>
                                </td>
                                <td>
                                    <% if (event.restrictions && event.restrictions.length > 0) { %>
                                        <% event.restrictions.forEach(restriction => { %>
                                            <span class="badge bg-warning me-1"><%= restriction %></span>
                                        <% }) %>
                                    <% } else { %>
                                        <span class="text-muted">None</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/admin/event/<%= event._id %>" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form class="delete-form" action="/admin/event/<%= event._id %>/delete" method="post" style="display:inline;">
                                            <button type="button" class="btn btn-sm btn-outline-danger delete-button">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    `
}) %>
