<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
    <div class="container-fluid">
        <div class="row">
            <% if (typeof user !== 'undefined' && user) { %>
                <!-- Sidebar -->
                <%- include('partials/sidebar') %>
                
                <!-- Main Content -->
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <% } else { %>
